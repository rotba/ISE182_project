<Window x:Class="ChatRoom_project.UserErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom_project"
        mc:Ignorable="d"
        Title="Error" Height="177" Width="300">
    <Grid Margin="0,0,-8,11">
        
        <TextBlock Text="{Binding MessageContent}" HorizontalAlignment="Left" Height="61" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Height="26" Margin="100,99,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.433,0.346" Click="Button_Click"/>

    </Grid>
</Window>
