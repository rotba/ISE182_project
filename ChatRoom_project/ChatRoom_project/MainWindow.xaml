    <Window x:Class="ChatRoom_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="642.667" Width="800">
    <Grid Margin="-4,112,3.333,-0.333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="398*"/>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="255*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Login" HorizontalAlignment="Left" Height="47" Margin="132,429,0,0" VerticalAlignment="Top" Width="145" Click="Button_Click"/>
        <TextBox x:Name="nicknameBox" Value="{Binding NicknameBox}"  HorizontalAlignment="Left" Height="24" Margin="140,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137"/>
        <TextBox x:Name="g_IDBox" HorizontalAlignment="Left" Height="24" Margin="140,321,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,241,0,0" TextWrapping="Wrap" Text="Nickname:" VerticalAlignment="Top" Width="86"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,322,0,0" TextWrapping="Wrap" Text="Group ID:" VerticalAlignment="Top" Width="86"/>
        <Button Content="Register" HorizontalAlignment="Left" Height="47" Margin="120,429,0,0" VerticalAlignment="Top" Width="145" Click="Register_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Grid x:Name="mainTitle" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="110" Margin="0,-115,0,0" VerticalAlignment="Top" Width="794">
            <TextBlock HorizontalAlignment="Left" Height="90" Margin="10,10,0,0" TextWrapping="Wrap" Text="Tomer and The Design Patterns' Chat Room" VerticalAlignment="Center" Width="774" FontSize="40"/>
        </Grid>


    </Grid>

</Window>
